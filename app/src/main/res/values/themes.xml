<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PicMosaic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <!-- Dialog Background -->
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <!-- Dialog Corner Radius and Elevation -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:elevation">4dp</item>

        <!-- Dialog Text Colors -->
<!--        <item name="android:textColorPrimary">@color/primary</item> &lt;!&ndash; Title Text Color &ndash;&gt;-->
        <item name="android:textColorSecondary">@color/background_dark</item> <!-- Body Text Color -->
    </style>

    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CustomDialogButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#64C3BF</item>
        <item name="android:elevation">2dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#48A6A7</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CustomStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">@color/primary</item> <!-- Change text color -->
        <item name="android:textSize">12sp</item> <!-- Adjust text size -->
        <item name="android:fontFamily">@font/poppins_regular</item> <!-- Set custom font -->
        <item name="colorSurfaceContainer">@color/primary_light</item>
    </style>

    <style name="Theme.PicMosaic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#48A6A7</item>
        <item name="colorPrimaryVariant">#48A6A7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#48A6A7</item>
        <item name="colorSecondaryVariant">#48A6A7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text selection highlight color -->
        <item name="android:textColorHighlight">@color/primary_light</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <!-- Material Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#48A6A7</item>
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>

        <!-- Corner Radius -->
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>

        <!-- Colors -->
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:textColorHighlight">@color/primary_light</item>

        <!-- Cursor & Selection Handles -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSelectHandle">@color/primary</item>
        <item name="android:textSelectHandleRight">@color/primary</item>
        <item name="android:textSelectHandleLeft">@color/primary</item>

        <!-- Error & Helper Text -->
        <item name="helperTextTextColor">@color/secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>

        <!-- Font -->
        <item name="fontFamily">@font/poppins_regular</item>

        <!-- Placeholder & Hint -->
        <item name="placeholderTextColor">@color/secondary</item>
        <item name="hintAnimationEnabled">true</item>

        <!-- Padding -->
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>