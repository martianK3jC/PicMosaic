<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_button_developer"
            android:background="@null"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <!-- Collage preview -->
    <ImageView
        android:id="@+id/collage_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:padding="@dimen/collage_padding"
        android:clipToPadding="false"
        android:adjustViewBounds="false" />

    <!-- Share buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/share_facebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/facebook_icon"
            android:background="@null"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/share_instagram"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/instagram_icon"
            android:background="@null"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/share_messenger"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/messenger_icon"
            android:background="@null"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/open_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/more_icon"
            android:background="@null"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Save to Gallery"
            android:layout_marginBottom="8dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/CustomTransparentButton"
            android:id="@+id/create_another_button"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/primary"
            android:paddingVertical="10dp"
            android:textSize="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"
            android:text="Create Another Collage"
            />
    </LinearLayout>

</LinearLayout>